# ntopng Environment Configuration Template
# Copy this file to .env and customize for your environment

# Network Configuration
NETWORK_INTERFACE=eth0
LOCAL_NETWORK=192.168.3.0/24
NTOPNG_HOST_IP=192.168.3.10

# Service Configuration
NTOPNG_WEB_PORT=3001
NTOPNG_DATA_DIR=./data
NTOPNG_LOG_DIR=/var/log/ntopng

# Security Settings
NTOPNG_ADMIN_PASSWORD=changeme123
DISABLE_LOGIN=1

# Database Configuration (optional)
# Enable if you want to use MySQL/MariaDB for data storage
DB_ENABLED=false
DB_HOST=localhost
DB_NAME=ntopng
DB_USER=ntopng
DB_PASSWORD=your_db_password

# Performance Settings
LOG_LEVEL=6
DUMP_FLOWS=both
DUMP_TIMELINE=both

# Alert Settings
ENABLE_ALERTS=true
ALERT_LOG_FILE=/var/log/ntopng/alerts.log

# Geolocation (requires GeoIP database)
ENABLE_GEOLOCATION=true

# Timezone
TZ=Auckland/New_Zealand
